<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/sv_box"   
	android:layout_height="match_parent"  
	android:layout_width="match_parent" >
	
	<RelativeLayout 
	   android:layout_width="match_parent"
	    android:layout_height="wrap_content"   
	    android:padding="5dp"    
	    android:background="#fff" >
	    
	    <LinearLayout
	        android:id="@+id/llSearch"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="12dp"
		    android:orientation="horizontal"
		    android:visibility="gone">
	    
		     <EditText 
				android:id="@+id/etSearch"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.9"
			    android:padding="12dp"
			    android:hint="@string/search"/>
		     
		     <Button 
		        android:id="@+id/btSearch"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.1"
			    android:hint="@string/search">
		     </Button>
	    </LinearLayout>
	    
		<RelativeLayout 
			android:id="@+id/rlCustomer"    
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:layout_below="@+id/llSearch"
		    android:padding="12dp"
		    android:background="#77D2D2DF" >
		    
		    <ImageView 
		        android:id="@+id/ivCustomer"
		    	android:layout_width="96dp"
		    	android:layout_height="96dp"
		    	android:layout_marginRight="12dp"
		    	android:background="#fff"
		    	android:contentDescription="@string/app_name"/>
		    
		    <TextView 
				android:id="@+id/tvCustomer"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_toRightOf="@+id/ivCustomer"
		    	android:layout_alignTop="@+id/ivCustomer"
		    	android:lines="3"/>
		    
		</RelativeLayout>	    
	
		<TableLayout 
		   	android:id="@+id/table101"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/rlCustomer"
     		android:stretchColumns="1">
		   
	   	</TableLayout>	
	</RelativeLayout>
</ScrollView>

