<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:padding="5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_sccontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_gray_border"
        android:padding="6dp" >

        <ImageView
            android:id="@+id/bt_scname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/timein48" />

        <TextView
            android:id="@+id/tvCName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/bt_scname"
            android:paddingTop="3dp"
            android:background="@null"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:focusable="false" />


        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/bt_scname"
            android:layout_below="@+id/tvCName"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@null"
            android:focusable="false"
            android:textColor="#00BFFF"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:background="#707070"
        android:gravity="center"
        android:text="@string/defaults"
        android:textColor="#000" />

    <LinearLayout
        android:id="@+id/group04ff"
        android:background="#000"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="0.2"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:text="@string/description" />

        <TextView
            android:id="@+id/textView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:gravity="center_horizontal"
            android:text="@string/ioh"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:gravity="center_horizontal"
            android:text="@string/surend"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group4ff"
        android:layout_width="match_parent"
        android:background="#000"
        android:visibility="gone"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="@string/description" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="0.05"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="@string/price1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="0.05"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="@string/price2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:visibility="gone"
            android:text="@string/ret01" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:text="@string/ret02"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#C0C0C0"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/mylinear"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="0.2"
            android:gravity="start"
            android:textColor="#000"
            android:text="@string/total" />

        <TextView
            android:id="@+id/tvTotal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:text="" />

        <TextView
            android:id="@+id/tvTotal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:text="" />

    </LinearLayout>

    <TextView
        android:id="@+id/llRemarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        android:text="@string/gremarks"/>

    <EditText
        android:id="@+id/etRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="74"
        android:padding="5dp"
        android:textSize="13sp"
        android:labelFor="@id/etRemarks"
        android:typeface="sans" />

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="submitToServer"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:background="@drawable/custom_button_click"
        android:text="@string/submit" />

</LinearLayout>