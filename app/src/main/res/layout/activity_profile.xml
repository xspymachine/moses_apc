<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/bg33"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
        <RelativeLayout
            android:id="@+id/headerLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
	
	    <TextView
	        android:id="@+id/tvName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/ivOwner"
	        android:layout_marginLeft="21dp"
	        android:layout_toRightOf="@+id/ivOwner"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"        
	        android:layout_alignParentRight="true"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/tvAddress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvName"
	        android:layout_marginTop="45dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"        
	        android:layout_alignParentRight="true"
	        android:textStyle="bold"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <ImageView
	        android:id="@+id/ivOwner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/profile96"
	        android:contentDescription="@string/app_name" />
	    </RelativeLayout>>
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/headerLayout"
	        android:layout_marginTop="44dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:text="@string/p1" />
	
	    <TextView
	        android:id="@+id/tvCStatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvBdate"
	        android:layout_alignRight="@+id/headerLayout"
	        android:layout_below="@+id/textView1"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tvCStatus"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="5dp"
	        android:text="@string/p2" />
	
	    <TextView
	        android:id="@+id/tvBdate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvInt"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView3"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tvBdate"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="5dp"
	        android:text="@string/p3" />
	    
	    <TextView
	        android:id="@+id/tvInt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvPhone"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView5"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/textView7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tvInt"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="5dp"
	        android:text="@string/p4" />
	    
	    <TextView
	        android:id="@+id/tvPhone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvEmail"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView7"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/textView9"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tvPhone"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="5dp"
	        android:text="@string/p5" />
	    
	    <TextView
	        android:id="@+id/tvEmail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView9"
	        android:layout_marginTop="5dp"
	        android:layout_toRightOf="@+id/textView9"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/textView10"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tvEmail"
	        android:layout_centerHorizontal="true"
	        android:text="@string/Purchaser"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/bg32"
	        android:textColor="#fff"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingLeft="40dp"
	        android:paddingRight="40dp"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <TextView
	        android:id="@+id/textView11"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textView10"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="5dp"
	        android:text="@string/loan" />
	    
	    <TextView
	        android:id="@+id/tvTrucks"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvEmail"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView11"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/textView15"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tvTrucks"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="5dp"
	        android:text="@string/route" />
	    
	    <TextView
	        android:id="@+id/tvWareCap"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvTrucks"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView15"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/textView12"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tvWareCap"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="5dp"
	        android:text="@string/freq" />
	    
	    <TextView
	        android:id="@+id/tvDelivery"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvTrucks"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView12"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/textView13"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tvDelivery"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="5dp"
	        android:text="@string/average" />
	    
	    <TextView
	        android:id="@+id/tvSupplier"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tvDelivery"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView13"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_gray_border"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
    
    </RelativeLayout>

</ScrollView>