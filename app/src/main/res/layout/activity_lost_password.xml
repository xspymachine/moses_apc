<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginTop="0dp"
    android:background="@drawable/bg34"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etNewPass"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_border"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint="@string/newPass"
        android:inputType="textPassword"
        android:padding="10dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etConPass"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_border"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="@string/conPass"
        android:inputType="textPassword"
        android:padding="10dp" />

    <CheckBox
        android:id="@+id/passCheck"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="#fff" />
    
    <EditText
        android:id="@+id/etNewHint"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_border"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="@string/pHint"
        android:inputType="text"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btSave"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#E88100"
            android:textStyle="normal"
            android:background="@drawable/custom_button_click"
            android:text="@string/btSave" />

        <Button
            android:id="@+id/btCancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="#E88100"
            android:textStyle="normal"
            android:background="@drawable/custom_button_click"
            android:text="@string/btCancel" />
    </LinearLayout>

</LinearLayout>
