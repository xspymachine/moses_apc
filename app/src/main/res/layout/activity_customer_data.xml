    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_marginTop="30dp" >

        <ImageButton
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_save"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/bt_save"
            android:background="#fff"
            android:contentDescription="@string/app_name"
            android:src="@drawable/cancel96" />

        <ImageButton
            android:id="@+id/bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#fff"
            android:contentDescription="@string/app_name"
            android:src="@drawable/save96" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/etSupplier"
        android:layout_below="@+id/tvWarehouse"
        android:background="#000"
        android:gravity="center"
        android:text="@string/defaults"
        android:textColor="#000" />      

</RelativeLayout>

</ScrollView>